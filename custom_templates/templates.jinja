{% macro day_subjects(events) %}

{% set subjects = [
  "English",
  "Chemistry",
  "Music",
  "History",
  "Maths",
  "Computer Science",
  "Biology",
  "PE",
  "Politics",
  "Physics",
  "Geography",
  "Art and Design",
  "Design Technology",
  "Latin",
  "Science",
  "French",
  "Performing Arts",
  "Religious Studies"          
] %}

{% set data = namespace(now_subjects = []) %}
{% for event in events %}
{% for subject in subjects %}
{% if (event.summary[0: subject | length] == subject and subject not in data.now_subjects) %}
{% set data.now_subjects = data.now_subjects + [subject] %}
{% endif %}
{% endfor %}
{% endfor %}
{{ data.now_subjects | join(", ") }}
{% endmacro %}